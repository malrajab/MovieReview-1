<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.m_alrajab.popularmovies.ux.DetailsActivityFragment"
    tools:showIn="@layout/activity_details">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" android:scrollbars="vertical">
        <ImageView
            android:layout_toRightOf="@+id/details_title"
            android:id="@+id/details_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0FFF"
                android:id="@+id/details_watch_trailer"
                android:text=" TRAILER "/>
            <Space
                android:layout_width="@dimen/text_margin"
                android:layout_height="wrap_content" />
            <ToggleButton
                android:background="@drawable/ic_favorite_border_black_48dp"
                android:layout_width="@dimen/ic_fav_btn_width"
                android:layout_height="@dimen/ic_fav_btn_height"
                android:id="@+id/details_icon_favorite"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/details_title"
            style="@style/CustomTitleMovieTV"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Rating: "
            style="@style/CustomCaptionTV"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/movie_ratingbar"
                android:numStars="5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </RelativeLayout>
        <TextView
            style="@style/CustomCaptionTV"
            android:text="Overview: " />
        <TextView
            style="@style/CustomDetailTV"
            android:id="@+id/details_overview" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/CustomCaptionTV"
            android:text="Date: " />
        <TextView
            style="@style/CustomDetailTV"
            android:id="@+id/details_date" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/CustomCaptionTV"
            android:text="Others: " />
        <TextView
            style="@style/CustomDetailTV"
            android:id="@+id/details_others" />
    </LinearLayout>

</LinearLayout>


